# Camera Analytics Configuration
# Copy this file to .env and update with your settings

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/camera_analytics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Models
MODEL_PATH=./models
DEFAULT_DETECTION_MODEL=yolov8n
DETECTION_CONFIDENCE_THRESHOLD=0.5
DETECTION_DEVICE=cuda  # or 'cpu'
BATCH_SIZE=4

# Camera Settings
MAX_CAMERAS=16
DEFAULT_FPS=15
DEFAULT_RESOLUTION=1920x1080
RECONNECT_DELAY_SECONDS=5
MAX_RECONNECT_ATTEMPTS=10

# Recording
RECORDING_PATH=./recordings
RECORDING_RETENTION_DAYS=30
RECORDING_FORMAT=mp4
EVENT_BUFFER_SECONDS=10

# Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=alerts@camera-analytics.local
ALERT_EMAIL_TO=user@example.com

# Optional: Twilio for SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_TO_NUMBER=

# Optional: Webhook
WEBHOOK_URL=https://api.example.com/alerts

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Security
ENCRYPTION_KEY=generate-with-fernet-key  # python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Performance
ENABLE_GPU=true
ENABLE_TENSORRT=false
ENABLE_FRAME_BATCHING=true

# Development
DEBUG=false
RELOAD=false
